<div>
  <!--
for Keystone (v2) authentication, the storage URL is

swiftks://<hostname>[:<port>]/<region>:<container>[/<prefix>]

  -->
  <input type="hidden" name="storage-url" value="{{storage_url}}"/>
  <label>Hostname:</label>
  <input type="text" name="hostname" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{hostname}}"/>
  <label>Port: (Optional)</label>
  <input type="text" name="port" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{port}}"/>
  <label>Region:</label>
  <input type="text" name="region" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{region}}"/>
  <label>Container:</label>
  <input type="text" name="container" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{container}}"/>
  <label>Prefix: (Optional)</label>
  <input type="text" name="prefix" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{prefix}}"/>
</div>

<div>
  <!--<label>Backend Login:</label>-->
  <input type="hidden" name="backend-login" value="{{backend_login}}"/>
  <label>Tenant:</label>
  <input type="text" name="tenant" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{tenant}}"/>
  <label>Username:</label>
  <input type="text" name="username" placeholder="Username (Max 32, Alphanumeric)" autocomplete="off" value="{{username}}"/>
</div>

<div>
  <!--<label>Backend Password:</label>-->
  <label>Keystone Password:</label>
  <input type="text" name="backend-password" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{backend_password}}"/>
</div>

<div>
  <label>Filesystem Passphrase:</label>
  <input type="text" name="fs-passphrase" placeholder="(Max 32, Alphanumeric)" autocomplete="off" value="{{fs_passphrase}}"/>
</div>
